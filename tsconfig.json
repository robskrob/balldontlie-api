{
  "compilerOptions": {
    "target": "es2022",                                  
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "ESNext",                                
    "moduleResolution": "bundler",                     
    "moduleDetection": "force",
    "esModuleInterop": true,                            
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                    
    "skipLibCheck": true                              
  },
  "ts-node": {
    "esm": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}
